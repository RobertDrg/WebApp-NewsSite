@model IEnumerable<Site.Models.Newspaper>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewspaperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewspaperCountry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewspaperName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewspaperCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NewspaperID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NewspaperID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NewspaperID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
